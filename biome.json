{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "app/**",
      "components/**",
      "hooks/**",
      "lib/**",
      "types/**",
      "tests/**",
      "docs/**",
      "public/**",
      "*.css",
      "*.html",
      "*.json",
      "*.md",
      "*.js",
      "*.ts",
      "!dist",
      "!node_modules",
      "!coverage",
      "!playwright-report",
      "!test-results",
      "!.venv-pdf",
      "!tsconfig*.json",
      "!package-lock.json"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": {
        "noImportantStyles": "off"
      },
      "suspicious": {
        "noUnknownAtRules": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "trailingCommas": "all"
    }
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "extends": [
    "ultracite/biome/core",
    "ultracite/biome/react",
    "ultracite/biome/next"
  ]
}
